  "license": "MIT",
  "keywords": [
    "stylelint",
    "linter",
    "code-analysis",
    "code-quality"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "preinstall": "npx lerna clean -y",
    "postinstall": "npm run lerna:setup",
    "lerna:setup": "npx lerna bootstrap --hoist",
    "test": "npm run test:find-rules && npm run lint:eslint",
    "test:find-rules": "node test/find-rules",
    "lint:eslint": "eslint --format=pretty . --max-warnings 0",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "7.18.2",
    "@babel/node": "7.17.10",
    "@babel/preset-env": "7.16.11",
    "@babel/register": "7.17.7",
    "@commitlint/cli": "17.0.2",
    "@commitlint/config-conventional": "16.2.1",
    "eslint": "8.10.0",
    "eslint-config-standard": "16.0.3",
    "eslint-config-stylelint": "15.1.0",
    "eslint-formatter-pretty": "4.1.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-standard": "5.0.0",
    "husky": "7.0.4",
    "lerna": "4.0.0",
    "lodash": "4.17.21",
    "stylelint": "14.2.0",
    "stylelint-declaration-block-no-ignored-properties": "2.5.0",
    "stylelint-find-new-rules": "4.0.0",
    "stylelint-order": "5.0.0",
    "stylelint-scss": "4.1.0"
  }
